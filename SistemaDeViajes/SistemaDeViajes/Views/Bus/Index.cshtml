

@using SistemaDeViajes.Models
@model List<BusModel>



@{
    ViewBag.Title = "Index";
    List<SelectListItem> dropDownSuc = (List<SelectListItem>)ViewBag.DropDownListSucursal;
    List<SelectListItem> dropDownBus = (List<SelectListItem>)ViewBag.DropDownListTipoBus;
    List<SelectListItem> dropDownModelo = (List<SelectListItem>)ViewBag.DropDownListModelo;
}

<h2>Bus</h2>
@Html.ActionLink("Nuevo", "Add", "Bus", null, new { @class = "btn btn-success" })




@using (Html.BeginForm("Index", "Bus", FormMethod.Get, new { @id="frmSearch"}))
{

    <div class="mt-3">
        <table id="tabla" class="table table-bordered table-hover">

            <thead class="bg-primary">
                <tr>
                    <td>@Html.LabelFor(p => Model[0].IDBus)</td>
                    <td>@Html.LabelFor(p => Model[0].Placa)</td>
                    <td>@Html.LabelFor(p => Model[0].Modelo)</td>
                    <td>@Html.LabelFor(p => Model[0].Sucursal)</td>
                    <td>@Html.LabelFor(p => Model[0].TipoBus)</td>
                    <td style="width: 10%; margin: auto;" class="font-weight-bold">Acciones</td>
                </tr>
            </thead>
            <thead class="bg-light">
                <tr>
                    <td>@Html.TextBox("IDBus", null, new { @class = "form-control" })</td>
                    <td>@Html.TextBox("Placa", null, new { @class = "form-control" })</td>
                    <td>@Html.DropDownList("IDModelo", dropDownModelo, new { @class = "form-control" })</td>
                    <td>@Html.DropDownList("IDSucursal", dropDownSuc, new { @class = "form-control" })</td>
                    <td>@Html.DropDownList("IDTipoBus", dropDownBus, new { @class = "form-control" })</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IDBus</td>
                        <td>@item.Placa</td>
                        <td>@item.Modelo</td>
                        <td>@item.Sucursal</td>
                        <td>@item.TipoBus</td>
                        <td style="width: 10%;">
                            @Html.ActionLink(" ", "Edit", "Bus", new { id = item.IDBus }, new { @class = "btn btn-primary glyphicon glyphicon-edit" })
                            @Html.ActionLink(" ", "Delete", "Bus", new { id = item.IDBus }, new { @class = "btn btn-danger glyphicon glyphicon-trash", @onclick = "Delete()" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}

<script src="~/Scripts/Bus.js"></script>