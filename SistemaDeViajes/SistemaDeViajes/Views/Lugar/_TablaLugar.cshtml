
@using SistemaDeViajes.Models
@model List<LugarModel>


<table class="table table-bordered table-hover">
    <thead class="bg-primary">
        <tr>
            <td>@Html.LabelFor(p => Model[0].IDLugar)</td>
            <td>@Html.LabelFor(p => Model[0].Nombre)</td>
            <td>@Html.LabelFor(p => Model[0].Descripcion)</td>
            <td class="font-weight-bold">Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IDLugar</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <button type="button" class="btn btn-primary glyphicon glyphicon-edit" onclick="Editar(@item.IDLugar)" data-toggle="modal" data-target="#exampleModal"></button>
                    <button type="button" class="btn btn-danger glyphicon glyphicon-trash" onclick="Delete(@item.IDLugar)" data-toggle="modal" data-target="#exampleModalDelete"></button>
                </td>
            </tr>
        }
    </tbody>
</table>